<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lay_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_card1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/iv_card2"
            android:layout_width="wrap_content"
            android:layout_height="252dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/back" />
    </LinearLayout>

    <Button
        android:id="@+id/b_deal"
        android:layout_width="177dp"
        android:layout_height="66dp"
        android:layout_below="@+id/lay_cards"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="184dp"
        android:text="Deal" />

    <LinearLayout
        android:id="@+id/lay_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Player 1"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Player 2"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_war"
        android:layout_width="378dp"
        android:layout_height="104dp"
        android:layout_below="@+id/b_deal"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:text="DRAW"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/record_act_btn"
        android:layout_width="181dp"
        android:layout_height="68dp"
        android:layout_below="@+id/lay_cards"
        android:layout_marginStart="-177dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/b_deal"
        android:text="Record" />

    <TextView
        android:id="@+id/round_text"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/tv_war"
        android:layout_marginBottom="-81dp"
        android:layout_weight="1"
        android:text="Round Played : "
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv"
        android:layout_width="391dp"
        android:layout_height="143dp"
        android:layout_above="@+id/lay_points"
        android:layout_marginBottom="10dp" />

</RelativeLayout>